<!--セル情報の一覧のフォーム(並び替え可能)-->
<table class="table font-small sampleTable small-zoom">
  <thead class="thead-inverse">
    <tr scope="row">
      <!--<th width="60">投稿者</th>-->
      <!--<th>ユーザーの会社名前</th>-->
      <th width="100"><%= sortable "created_at", "更新日" %></th>
      <th width="100"><%= sortable "status", "状況" %></th>
      <th width="100"><%= sortable "place", "前設置" %></th>
      <th width="120"><%= sortable "maker", "メーカー" %></th>
      <th width="300"><%= sortable "name", "物件名" %></th>
      <th width="80"><%= sortable "number", "数量" %></th>
      <th width="80"><%= sortable "type_machine", "種別" %></th>
      <th width="120"><%= sortable "price", "価格" %></th>
      <th width="150"><%= sortable "removal_date", "撤去日" %></th>
      <th width="80"><%= sortable "remnant", "残債" %></th>
      <th width="80"><%= sortable "stage", "使用次" %></th>
      <th width="80"><%= sortable "condition", "状態" %></th>
      <th width="200"><%= sortable "remarks", "備考" %></th>
      
      <th colspan="1" width="100"></th>
      
      <% if current_user.admin? %>
      <th colspan="1" width="100"></th>
      <% end %>
      
    </tr>
  </thead>
  <tbody>
    <% @sells.each do |sell| %>
      <tr scope="row">
        <%#= sell.user.name %>
        <%#= sell.user.detail.company_name %>
        <%#= sell.created_at %>
        <%#= I18n.l(sell.created_at, format: :long) %>
        <td><%= sell.created_at.strftime("%m/%d") %></td>
        <td><%= sell.status %></td>
        <td><%= sell.place %></td>
        <td><%= sell.maker %></td>
        <td><%= sell.name %></td>
        <td><%= sell.number %></td>
        <td><%= sell.type_machine %></td>
        <td><%= sell.price %></td>
        <td><%= sell.removal_date %></td>
        <td><%= sell.remnant %></td>
        <td><%= sell.stage %></td>
        <td><%= sell.condition %></td>
        <td><%= sell.remarks %></td>
        
     
        <td class="red"><%= link_to '詳細', sell %></td>
        
      <% if current_user.admin? %>
        <td><%= link_to '編集', edit_sell_path(sell) %></td>
        <%= will_paginate %>
      <% end %>
      
      </tr>
    <% end %>
      
 </tbody>
</table>